<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Tradiconal.CenaTradicional"
    android:background="#E6EBE0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Platillo"
        android:id="@+id/textView30"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cena Tradicional"
        android:id="@+id/textView31"
        android:layout_below="@+id/textView30"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView10"
        android:layout_below="@+id/textView31"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/ic_cena_exclu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASTAS MAC &amp; CHEESE Con queso gorgonzola, parmesano, trocitos de tocino y un toque de resca de espinacaosno un toque de picante y vino blanco. SPAGHETTI CECILIA Camarón y salsa con jamón serrano, espárrago, pimiento rojo y crema. LASAGNA DE CARNE Con salsa de jitomate, especias y queso."
        android:id="@+id/textView32"
        android:textColor="#20A39E"
        android:textSize="12sp"
        android:layout_below="@+id/textView47"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comprar"
        android:drawableRight="@android:drawable/ic_input_add"
        android:id="@+id/button13"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView30"
        android:layout_toStartOf="@+id/textView30" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtPedir2"
        android:layout_alignBottom="@+id/button13"
        android:layout_toRightOf="@+id/button13"
        android:layout_toEndOf="@+id/button13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Precio Q275.00"
        android:id="@+id/textView47"
        android:layout_below="@+id/imageView10"
        android:layout_alignRight="@+id/textView30"
        android:layout_alignEnd="@+id/textView30" />

</RelativeLayout>
