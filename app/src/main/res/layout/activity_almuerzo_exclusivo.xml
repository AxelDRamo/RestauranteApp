<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Exclusivo.AlmuerzoExclusivo"
    android:background="#E6EBE0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Platillo"
        android:id="@+id/textView22"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Almuerzo Exclusivo"
        android:id="@+id/textView23"
        android:layout_below="@+id/textView22"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView8"
        android:layout_below="@+id/textView23"
        android:layout_alignLeft="@+id/textView23"
        android:layout_alignStart="@+id/textView23"
        android:background="@mipmap/ic_exclusivo_almuerzo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Precio Q200.00"
        android:id="@+id/textView24"
        android:layout_below="@+id/imageView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rissois de camarón Tipo empanadas fritas y rellenas de camarón en salsa blanca (6 piezas) Camarones Algarve Salteados con tocino, cebolla, aceitunas picadas y un toque de piri piri acompañados de arroz. Polvo à lagareiro Pulpo asado a las brasas, espinacas y papa.Vino portugués verde, tinto, blanco ó rosado"
        android:id="@+id/textView25"
        android:textColor="#20A39E"
        android:textSize="12sp"
        android:layout_below="@+id/textView24"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comprar"
        android:id="@+id/button10"
        android:drawableRight="@android:drawable/ic_input_add"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView24"
        android:layout_toStartOf="@+id/textView24" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtPedir4"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button10"
        android:layout_toEndOf="@+id/button10" />
</RelativeLayout>
